{
  "name": "react-express-boilerplate",
  "version": "1.0.0",
  "description": "a starter project in React (using Webpack) with an ExpressJS server",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "concurrently --names \"SERVER,CLIENT\" \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "webpack-dev-server --mode=development",
    "dev:server": "nodemon index.js",
    "start": "node index.js",
    "build": "./node_modules/.bin/webpack",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|md|vue)\""
  },
 
  "author": "Jeffery Shivers",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^6.3.0",
    "dotenv": "^10.0.0",
    "express": "^4.16.2"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-react": "^7.7.4",
    "babel-loader": "^8.0.6",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "html-webpack-plugin": "4.0.0",
    "husky": "^7.0.2",
    "nodemon": "^2.0.13",
    "path": "^0.12.7",
    "prettier": "^2.4.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.9.0",
    "webpack-dev-server": "^4.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format"
    }
  },
  "link-staged" : {
    "*.{js,jsx}" : [
      "npm run format",
      "npm run lint"
    ]
  }
}
