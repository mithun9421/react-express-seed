{
  "name": "react-express-boilerplate",
  "version": "1.0.0",
  "description": "a starter project in React (using Webpack) with an ExpressJS server",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev" : "concurrently --names \"SERVER,CLIENT\" \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client" : "./node_modules/.bin/webpack-dev-server --port 3000 --content-base dist/",
    "dev:server" : "nodemon index.js",
    "start" : "node index.js",
    "build": "./node_modules/.bin/webpack"
  },
  "author": "Jeffery Shivers",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^6.3.0",
    "express": "^4.16.2",
    "webpack-dev-middleware": "^2.0.3"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "nodemon": "^2.0.13",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7"
  }
}
